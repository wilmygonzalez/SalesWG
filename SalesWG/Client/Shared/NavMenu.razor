        <MudNavLink Href="/catalog/category" Icon="@Icons.Material.Outlined.Category">Categories</MudNavLink>
        <MudNavLink Href="/catalog/manufacturer" Icon="@Icons.Material.Outlined.Crop32">Manufacturers</MudNavLink>
    </MudNavGroup>

    <MudNavGroup Title="Promotions" Icon="@Icons.Material.Outlined.NewReleases">
    </MudNavGroup>

     <MudNavGroup Title="Reports" Icon="@Icons.Material.Outlined.TableChart">
    </MudNavGroup>

    <MudNavGroup Title="Configuration" Icon="@Icons.Material.Outlined.SettingsApplications">
    </MudNavGroup>

</MudNavMenu>

